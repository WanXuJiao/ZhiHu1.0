<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.example.zhihu10.ui.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <LinearLayout
                android:id="@+id/ll_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:elevation="15dp"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/iv_menu_feed"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_bottomtabbar_feed" />

                <ImageView
                    android:id="@+id/iv_menu_discover"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_bottomtabbar_discover" />

                <ImageView
                    android:id="@+id/iv_menu_notification"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_bottomtabbar_notification" />

                <ImageView
                    android:id="@+id/iv_menu_message"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_bottomtabbar_message" />

                <ImageView
                    android:id="@+id/iv_menu_more"
                    style="@style/ImageViewStyle"
                    android:src="@drawable/ic_bottomtabbar_more" />

            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>


