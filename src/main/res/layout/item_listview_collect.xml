<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_view"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_collect_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/tv_collect_givenname"
            android:background="@android:color/white"
            android:src="@drawable/head1" />

        <TextView
            android:id="@+id/tv_collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给人生多些趣味"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_collect_givenname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_concern_icon"
            android:paddingLeft="26dp"
            android:paddingTop="22dp"
            android:text="由 牛牛 创建"
            android:textColor="#77000000" />

        <TextView
            android:id="@+id/tv_collect_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="2"
            android:paddingLeft="6dp"
            android:paddingTop="22dp"
            android:text="1619人关注"
            android:textColor="#77000000" />

    </RelativeLayout>

</LinearLayout>