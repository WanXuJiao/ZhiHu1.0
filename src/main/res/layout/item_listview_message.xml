<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:paddingLeft="15dp"
        android:src="@drawable/sso_zhihu_logo"
         />

    <TextView
        android:id="@+id/tv_message_givenname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:paddingLeft="15dp"
        android:text="知乎管理员"
        android:paddingTop="20dp"
        android:textSize="18sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="07_15  17:55"
        android:paddingTop="20dp"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:textColor="#77000000"
        />
    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:paddingLeft="15dp"
        android:text="您好,非常感谢您的举报,您举报的易恒在问题"
        android:paddingTop="46dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#77000000"
        />

    <ImageView
        android:id="@+id/iv_more_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/tv_message_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/list_divider"
        android:tint="@android:color/darker_gray"></ImageView>

    </RelativeLayout>

</RelativeLayout>