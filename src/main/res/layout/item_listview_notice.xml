<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:background="@color/protectEyesGreen"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:background="@color/protectEyesGreen"
            android:id="@+id/iv_notice_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/head1"
            />

        <TextView
            android:id="@+id/tv_notice_givenname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_notice_icon"
            android:paddingLeft="6dp"
            android:text="硬派健身新增了文章"
            android:textColor="#77000000" />

        <TextView
            android:paddingLeft="6dp"
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_notice_icon"
            android:paddingTop="22dp"
            android:text="@string/feed_item_title"
            android:textColor="#000"
            android:textSize="16sp"
            android:maxLines="2"
            />
    </RelativeLayout>

</LinearLayout>