<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        >

        <ImageButton
            android:background="@android:color/white"
            android:id="@+id/ib_grid_close"
            android:paddingLeft="132dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_actioncard"
            />
        <ImageView
            android:id="@+id/iv_gridview_icon"
            android:layout_alignTop="@+id/ib_grid_close"
            android:layout_centerHorizontal="true"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/head2"
            />
        <TextView
            android:id="@+id/tv_gridView_title"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:text="要了解胎儿的健康和安全,你得知道这些"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="end"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
        <TextView
            android:id="@+id/tv_gridView_givenname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="田吉顺·"
            android:textSize="10sp"
            android:layout_marginTop="130dp"
            />
            <TextView
                android:id="@+id/tv_gridView_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19小时后"
                android:textSize="10sp"
                android:layout_marginTop="130dp"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看Live"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:textColor="@color/titleblue"
                />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>